<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_iknip"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/back"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bell"
        android:layout_toStartOf="@id/menu"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:src="@drawable/ic_titik_tiga"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:id="@+id/pp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/pp"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/back"
        />

    <LinearLayout
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_toEndOf="@id/pp"
        android:layout_below="@id/back"
        android:layout_marginTop="25dp"
        android:gravity="center"
        >
    <TextView
        android:id="@+id/postCount"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:text="6956     Pengikut"
        android:textAlignment="center"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/followerCount"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:text="27,7jt      Pengikut"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/followCount"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="219      Postingan"
        android:textStyle="bold"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ikhwan Hanipp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pp"
        />
    <TextView
        android:id="@+id/job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programmer"
        android:textColor="@color/grey"
        android:layout_below="@+id/uname"
        />
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â€œYou might not think that programmers are  artists, but programming is an extremely creative profession. Itâ€™s  logic-based creativity.â€ â€“ John Romero  ðŸ’»"
        android:layout_below="@+id/job"
        />
    <LinearLayout
        android:id="@+id/profileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Edit profil"
        android:textAllCaps="false"
        />
        <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginStart="20dp"
        android:text="Bagikan profil"
        android:textAllCaps="false"
        />
    </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/ic_feed"
            android:layout_below="@id/profileButton"
            android:layout_toStartOf="@id/reels"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="80dp"
            android:src="@drawable/ic_profile"
            android:layout_below="@id/profileButton"
            android:layout_toEndOf="@id/reels"
            />
        <ImageView
            android:id="@+id/reels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reels"
            android:layout_marginTop="30dp"
            android:layout_below="@id/profileButton"
            android:layout_centerHorizontal="true"
            />


<com.example.uts_pppb_instagram.BottomBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


</RelativeLayout>